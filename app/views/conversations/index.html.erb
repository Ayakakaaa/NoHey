<div class="c-container">
<% @conversations.each do |conversation| %>
    <% users = conversation.users.where.not(id: current_user.id) %>
    <% users.each do |user| %>
    <div class="c-members">
        <% if user.images.attached? %>
            <%= image_tag user.images.first, class:"p-image" %>            
            <%= link_to user.first_name, conversation_path(conversation), class: "pertner" %>
            <small><%= time_ago_in_words(user.updated_at)%> ago</small>
        <% else %>
            <%= image_tag 'icon2.jpg', class:"p-image" %>
            <%= link_to user.first_name, conversation_path(conversation), class: "pertner" %>
            <small><%= time_ago_in_words(user.updated_at)%> ago</small>
        <% end %>
    </div>
    <% end %>
<% end %>
</div>





